- title "重置密码"
.span-9
  .login-box
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      = f.label :email
      = f.email_field :email
      = f.submit "发送重置密码"
.span-9.last
  .login-tools
    = render :partial => "devise/shared/links"

