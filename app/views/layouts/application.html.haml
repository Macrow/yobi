!!!
%html
  %head
    %title= content_for?(:title) ? yield(:title) : "yobi"
    = stylesheet_link_tag "application"
    /[if lt IE 8]
      = stylesheet_link_tag "blueprint/ie.css"
    = javascript_include_tag "application"
    = yield(:script)
    = csrf_meta_tags
  .container
    .span-24
      #top-nav= user_links
    .span-24
      #logo
        %h1= link_to image_tag("/images/yobi.gif"), root_path
      #tab
        %ul.tabs
          %li= link_to "首 页", root_path, :class => "selected"
          - @root_categories.each do |c|
            %li= link_to c.name, c
    .span-24= render "shared/tabs_tools"
    .span-6= render "shared/sidebar"
    .span-18.last.top-margin-5
      - flash.each do |key,msg|
        = content_tag :div, msg, :class => key
    - if controller_name.downcase != "home"
      .span-18.last= show_nav_path
    - else
      .span-12= render "shared/slide"
      .span-6.last= render "shared/articles"
    .span-18.last= yield
    .span-24= render "shared/footer"

