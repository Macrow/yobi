!!!
%html
  %head
    %title= content_for?(:title) ? yield(:title) : "yobi"
    %meta{:name => "robots", :content => "noindex,nofollow"}/
    = stylesheet_link_tag "admin/application.css"
    = javascript_include_tag :defaults, :cache => "main"
    = yield(:script)
    = csrf_meta_tag
  %body
    #header
      #global_links= admin_user_links
      %h1= link_to image_tag("/images/Yobi-logo2.png"), admin_root_path
      #tabs= render "admin/shared/tabs"
    #main
      #left
        - flash.each do |key,msg|
          = content_tag :div, msg, :id => "flash_#{key}"
        %h2.head= content_for?(:title) ? yield(:title) : "yobi"
        #screen
          = yield
      #right= yield_or_partial(:sidebar, yield(:sidebar))
    #footer
      footer

