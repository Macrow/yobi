= form_for [product, comment], :remote => true do |f|
  -if comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(comment.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - comment.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :comment
    = f.text_area :comment
  .actions
    = f.submit :disable_with => "正在提交..."

