- title @product.name
#product
  %h3= @product.name
  .span-9
    - if @product.major_image.nil?
      = image_tag "/images/no-pic.png", :size => "320x320"
    - else
      = image_tag @product.major_image.image.url, :size => "320x320"
    #more_images= render @product.images, :title => @product.name
  .span-9.last
    .span-9.column= "零售价格：<span class='off'>#{show_money(@product.retail_price)}</span>".html_safe
    .span-9.column= "友比价格：<span class='red'>#{show_money(@product.present_price)}</span>".html_safe
    .span-9.column= "库存数量：#{@product.stock_count}"
  .span-18.last.top-margin-10
    %ul.tabs
      %li
        %a{:class => "selected"}
          详细说明
  .span-18.last.top-margin-5
    = @product.description.html_safe
  .span-18.last.top-margin-10
    %ul.tabs
      %li
        %a{:class => "selected"}
          用户评论
= content_for :script do
  = javascript_include_tag "lightbox/jquery.lightbox.min.js"

