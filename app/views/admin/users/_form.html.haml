.form
  = form_for [:admin, @user] do |f|
    -if @user.errors.any?
      #error_explanation
        %h2= "#{pluralize(@user.errors.count, "error")} prohibited this product from being saved:"
        %ul
          - @user.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.label :admin, "是否为管理员"
      = f.check_box :admin
    .field
      = f.submit

