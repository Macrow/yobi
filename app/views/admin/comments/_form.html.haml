= form_for [:admin, product, comment], :remote => true do |f|
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :comment
    = f.text_area :comment
  .actions
    = f.submit :disable_with => "正在提交..."
    或者
    = link_to_function "取消", "$('form#edit_comment_#{comment.id}').replaceWith('#{escape_javascript(render comment)}')"

